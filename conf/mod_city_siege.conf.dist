[worldserver]

##############################################
# mod-city-siege configuration
##############################################
#
#    CitySiege.Enabled
#        Description: Enables the City Siege module.
#        Default:     1 (enabled)
#                     Valid values: 0 (disabled) / 1 (enabled)
CitySiege.Enabled = 1

#
#    CitySiege.DebugMode
#        Description: Enables debug logging for the City Siege module.
#        Default:     0 (disabled)
#                     Valid values: 0 (disabled) / 1 (enabled)
CitySiege.DebugMode = 0

#
#    CitySiege.TimerMin
#        Description: Minimum time (in minutes) between city siege events.
#        Default:     120 (2 hours)
CitySiege.TimerMin = 120

#
#    CitySiege.TimerMax
#        Description: Maximum time (in minutes) between city siege events.
#        Default:     240 (4 hours)
CitySiege.TimerMax = 240

#
#    CitySiege.EventDuration
#        Description: Duration (in minutes) of each siege event.
#        Default:     30
CitySiege.EventDuration = 30

#
#    CitySiege.AllowMultipleCities
#        Description: Allow siege events in multiple cities at the same time.
#        Default:     0 (only one city at a time)
#                     Valid values: 0 (single) / 1 (multiple)
CitySiege.AllowMultipleCities = 0

#
#    CitySiege.AnnounceRadius
#        Description: Radius (in yards) for announcing siege events to nearby players.
#                     Set to 0 to announce to the entire world.
#        Default:     500
CitySiege.AnnounceRadius = 500

#
#    CitySiege.MinimumLevel
#        Description: Minimum player level to participate in siege events.
#        Default:     1
CitySiege.MinimumLevel = 1

###############################################
# City Configurations
###############################################
# Each city can be enabled/disabled individually.
# Cities: Stormwind, Ironforge, Darnassus, Exodar,
#         Orgrimmar, Undercity, Thunder Bluff, Silvermoon

#
#    CitySiege.Stormwind.Enabled
#        Description: Enable siege events in Stormwind.
#        Default:     1 (enabled)
#                     Valid values: 0 (disabled) / 1 (enabled)
CitySiege.Stormwind.Enabled = 1

#
#    CitySiege.Ironforge.Enabled
#        Description: Enable siege events in Ironforge.
#        Default:     1 (enabled)
#                     Valid values: 0 (disabled) / 1 (enabled)
CitySiege.Ironforge.Enabled = 1

#
#    CitySiege.Darnassus.Enabled
#        Description: Enable siege events in Darnassus.
#        Default:     1 (enabled)
#                     Valid values: 0 (disabled) / 1 (enabled)
CitySiege.Darnassus.Enabled = 1

#
#    CitySiege.Exodar.Enabled
#        Description: Enable siege events in the Exodar.
#        Default:     1 (enabled)
#                     Valid values: 0 (disabled) / 1 (enabled)
CitySiege.Exodar.Enabled = 1

#
#    CitySiege.Orgrimmar.Enabled
#        Description: Enable siege events in Orgrimmar.
#        Default:     1 (enabled)
#                     Valid values: 0 (disabled) / 1 (enabled)
CitySiege.Orgrimmar.Enabled = 1

#
#    CitySiege.Undercity.Enabled
#        Description: Enable siege events in Undercity.
#        Default:     1 (enabled)
#                     Valid values: 0 (disabled) / 1 (enabled)
CitySiege.Undercity.Enabled = 1

#
#    CitySiege.ThunderBluff.Enabled
#        Description: Enable siege events in Thunder Bluff.
#        Default:     1 (enabled)
#                     Valid values: 0 (disabled) / 1 (enabled)
CitySiege.ThunderBluff.Enabled = 1

#
#    CitySiege.Silvermoon.Enabled
#        Description: Enable siege events in Silvermoon City.
#        Default:     1 (enabled)
#                     Valid values: 0 (disabled) / 1 (enabled)
CitySiege.Silvermoon.Enabled = 1

###############################################
# Spawn Configurations
###############################################

#
#    CitySiege.SpawnCount.Minions
#        Description: Number of regular enemy units to spawn during siege.
#        Default:     15
CitySiege.SpawnCount.Minions = 15

#
#    CitySiege.SpawnCount.Elites
#        Description: Number of elite enemy units to spawn during siege.
#        Default:     5
CitySiege.SpawnCount.Elites = 5

#
#    CitySiege.SpawnCount.MiniBosses
#        Description: Number of mini-bosses to spawn during siege.
#        Default:     2
CitySiege.SpawnCount.MiniBosses = 2

#
#    CitySiege.SpawnCount.Leaders
#        Description: Number of faction leaders to spawn during siege.
#        Default:     1
CitySiege.SpawnCount.Leaders = 1

###############################################
# Creature Entry Configurations
###############################################
# These define which creature entries to use for siege forces.
# Customize these based on your server's creature_template table.

#
#    CitySiege.Creature.Alliance.Minion
