CitySiege.AggroNPCs = 1

###############################################
# Cinematic and RP Settings
###############################################

#
#    CitySiege.CinematicDelay
#        Description: Time (in seconds) for the initial cinematic/RP phase before combat.
#        Default:     45
CitySiege.CinematicDelay = 45

#
#    CitySiege.YellFrequency
#        Description: How often (in seconds) siege leaders yell during the event.
